{
  "name": "rpgmem/wp-ffcertificate",
  "description": "Free Form Certificate - WordPress plugin for certificate generation and management",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "rpgmem",
      "email": "contact@example.com"
    }
  ],
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "yoast/phpunit-polyfills": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "FreeFormCertificate\\": "includes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "FreeFormCertificate\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-html coverage"
  },
  "config": {
    "optimize-autoloader": true,
    "classmap-authoritative": false,
    "allow-plugins": {
      "phpunit/phpunit": true
    }
  }
}
